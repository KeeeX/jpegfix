{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2019",
    "module": "ES2015",
    "lib": [],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "composite": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*", "Gruntfile.js"]
}

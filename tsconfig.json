{
  "compilerOptions": {
    "incremental": true,
    "composite": false,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "target": "es2022",
    "module": "es2022",
    "rootDir": "./src",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "sourceMap": false,
    "outDir": "./lib",
    "removeComments": false,
    "resolveJsonModule": true,
    "noEmit": true,
    "emitBOM": false,
    "newLine": "lf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "ts-node": {
    "swc": true
  }
}
